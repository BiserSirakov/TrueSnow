<!DOCTYPE html>
<html>
<head>
    <title>True Snow</title>

    <meta name="description" content="A place for the true snowboarders. Your best posts, articles, evnts and more." />
    <meta name="keywords" content="social network, social, snow, snowboard, snowboarding" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta charset="utf-8" />

    <link rel="icon" type="image/png" sizes="96x96" href="/favicon-96x96.png">

    <link rel="stylesheet" href="http://fonts.googleapis.com/icon?family=Material+Icons">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.97.5/css/materialize.min.css">

    @Styles.Render("~/Content/main")
</head>
<body>
    <div id="ts-container" class="dashboard-page">
        <nav id="main-header" class="light-blue lighten-2">
            <div class="nav-wrapper">
                <a href="/Home" class="brand-logo">true snow</a>
                <a href="#" data-activates="mobile" class="button-collapse"><i class="material-icons">menu</i></a>

                <ul id="right-menu" class="right hide-on-med-and-down">
                    <li>
                        @{ Html.RenderAction("GetSearch", "Search", new { area = "" }); }
                    </li>
                    <li><a class="waves-effect waves-light btn modal-trigger" href="#addPostModal">Post</a></li>
                    <li><a href="/Messages"><i data-position="bottom" data-delay="50" data-tooltip="Messages" class="material-icons tooltipped">chat_bubble</i></a></li>
                    <li><a href="#"><i data-position="bottom" data-delay="50" data-tooltip="Notifications" class="material-icons tooltipped">notifications</i></a></li>
                    @{ Html.RenderAction("GetUser", "Profile", new { area = "" }); }
                    <li><a id="btnLogout" href="/"><i data-position="bottom" data-delay="50" data-tooltip="Logout" class="material-icons tooltipped">power_settings_new</i></a></li>
                </ul>

                <ul class="side-nav" id="mobile">
                    <li>
                        @{ Html.RenderAction("GetSearch", "Search", new { area = "" }); }
                    </li>
                    <li><a class="waves-effect waves-light btn modal-trigger" href="#addPostModal">Post</a></li>
                    <li><a href="#"><i data-position="bottom" data-delay="50" data-tooltip="Messages" class="material-icons tooltipped">chat_bubble</i></a></li>
                    <li><a href="#"><i data-position="bottom" data-delay="50" data-tooltip="Notifications" class="material-icons tooltipped">notifications</i></a></li>
                    @{ Html.RenderAction("GetUser", "Profile", new { area = "" }); }
                    <li><a id="btnLogout" href="/"><i data-position="bottom" data-delay="50" data-tooltip="Logout" class="material-icons tooltipped">power_settings_new</i></a></li>
                </ul>
            </div>
        </nav>

        <div class="parallax-container">
            <div class="parallax"></div>
        </div>

        @RenderBody()

        <footer class="page-footer light-blue lighten-2">
            <div class="container">
                <div class="row">
                    <div class="col l6 s12">
                        <h5 class="white-text">True Snow</h5>
                        <p class="grey-text text-lighten-4">The place for the true snowboarders.</p>
                    </div>
                </div>
            </div>
            <div class="footer-copyright light-blue lighten-3">
                <div class="container">
                    © @DateTime.Now.Year TrueSnow - 
                    <a class="grey-text text-lighten-4" href="https://github.com/BiserSirakov/TrueSnow" target="_blank">Open Source</a>
                </div>
            </div>
        </footer>
    </div>

    <!-- Add Post Modal -->
    <div id="addPostModal" class="modal">
        <div class="modal-content">
            @{ Html.RenderAction("GetCreate", "Posts"); }
        </div>
    </div>

    <script type="text/javascript" src="https://code.jquery.com/jquery-2.1.1.min.js"></script>
    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.97.5/js/materialize.min.js"></script>
    <script src="https://npmcdn.com/masonry-layout@4.0/dist/masonry.pkgd.min.js"></script>
    @Scripts.Render("~/bundles/main")
    @RenderSection("scripts", required: false)
</body>
</html>
