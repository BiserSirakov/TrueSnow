<!DOCTYPE html>
<html>
<head>
    <title>True Snow</title>

    <meta name="description" content="A place for the true snowboarders. Your best posts, articles, evnts and more." />
    <meta name="keywords" content="social network, social, snow, snowboard, snowboarding" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta charset="utf-8" />

    <link rel="icon" type="image/png" sizes="96x96" href="/favicon-96x96.png">

    <link href="http://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.97.5/css/materialize.min.css">

    @Styles.Render("~/Content/main")
</head>
<body>
    <div id="ts-container" class="dashboard-page">

        <nav id="main-header" class="light-blue lighten-2">
            <div class="nav-wrapper">
                <a href="/Home" class="brand-logo">TS</a>
                <a href="#" data-activates="mobile" class="button-collapse"><i class="material-icons">menu</i></a>

                <ul class="right hide-on-med-and-down">
                    <li>
                        <form>
                            <div class="input-field">
                                <input id="search" type="search" required>
                                <label for="search"><i class="material-icons">search</i></label>
                                <i class="material-icons">close</i>
                            </div>
                        </form>
                    </li>
                    <li><a class="waves-effect waves-light btn">Post</a></li>
                    <li><a href="#"><i class="material-icons">chat_bubble</i></a></li>
                    <li><a href="#"><i class="material-icons">notifications</i></a></li>
                    <li><a id="btnLogout" href="/">Log out</a></li>
                </ul>

                <ul class="side-nav" id="mobile">
                    <li><a href="sass.html">Sass</a></li>
                    <li><a href="badges.html">Components</a></li>
                    <li><a href="collapsible.html">Javascript</a></li>
                    <li><a href="mobile.html">Mobile</a></li>
                </ul>
            </div>
        </nav>

        @RenderBody()

        <footer class="page-footer light-blue lighten-2">
            <div class="container">
                <div class="row">
                    <div class="col l6 s12">
                        <h5 class="white-text">True Snow</h5>
                        <p class="grey-text text-lighten-4">The place for the true snowboarders.</p>
                    </div>
                </div>
            </div>
            <div class="footer-copyright light-blue lighten-3">
                <div class="container">
                    © @DateTime.Now.Year TrueSnow - 
                    <a class="grey-text text-lighten-4" href="https://github.com/BiserSirakov/TrueSnow" target="_blank">Open Source</a>
                </div>
            </div>
        </footer>
    </div>

    <script type="text/javascript" src="https://code.jquery.com/jquery-2.1.1.min.js"></script>
    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.97.5/js/materialize.min.js"></script>
    @Scripts.Render("~/bundles/main")
</body>
</html>
