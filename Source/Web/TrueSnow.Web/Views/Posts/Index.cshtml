@using System.Globalization
@model IEnumerable<TrueSnow.Web.Models.Posts.PostViewModel>

<div class="list-group">
    @foreach (var post in Model)
    {
        <a href="@post.Url" class="list-group-item" style="height: 270px">
            <h4 class="list-group-item-heading">@post.Title</h4>
            <img src="~/File/@post.Photo.Id" alt="photo" class="img-responsive img-rounded" style="height: 180px;" />
            by <b>@post.Creator.FirstName @post.Creator.LastName</b>
            <p>@post.CreatedOn.ToString("dd MMM HH:mm", CultureInfo.CreateSpecificCulture("en-US"))</p>
        </a>
    }
</div>