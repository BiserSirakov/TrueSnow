@model PostViewModel

@using (Html.BeginForm("Create", "Posts", FormMethod.Post, new { role = "form", enctype = "multipart/form-data", id = "createPostForm" }))
{
    @Html.AntiForgeryToken()

    <div class="row">
        <div class="input-field col s10 offset-s1">
            @Html.TextBoxFor(m => m.Title, new { @class = "validate reginput", placeholder = "Title" })
            @Html.ValidationMessageFor(m => m.Title, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="row">
        <div class="input-field col s10 offset-s1">
            @Html.TextBoxFor(m => m.Content, new { @class = "validate reginput", placeholder = "Content" })
            @Html.ValidationMessageFor(m => m.Content, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="row" style="height: 65px;">
        <div class="input-field file-field col s10 offset-s1">
            <div class="waves-effect waves-light btn btn-login">
                Photo
                <input type="file" name="upload">
            </div>
            <div class="file-path-wrapper">
                <input class="file-path validate" type="text">
            </div>
        </div>
    </div>

    <div class="center-align" style="margin-bottom: 15px;">
        <input type="submit" class="waves-effect waves-light btn btn-login" value="Add" />
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}