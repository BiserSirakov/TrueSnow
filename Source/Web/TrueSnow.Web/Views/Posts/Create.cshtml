@model PostViewModel

@using (Html.BeginForm("Create", "Posts", FormMethod.Post, new { @class = "form-horizontal", role = "form", enctype = "multipart/form-data", style = "padding: 10px 50px;", id="createPostForm" }))
{
    @Html.AntiForgeryToken()

    <div class="form-group">
        @Html.TextBoxFor(m => m.Title, new { @class = "form-control", placeholder = "Title", id="postTitleTb" })
        @Html.ValidationMessageFor(m => m.Title, "", new { @class = "text-danger" })
    </div>

    <div class="form-group">
        @Html.TextAreaFor(m => m.Content, new { @class = "form-control", rows = "4", placeholder = "Content", id = "postContentTb" })
        @Html.ValidationMessageFor(m => m.Content, "", new { @class = "text-danger" })
    </div>

    <div class="form-group">
        <input class="form-control input-validation-error"
               id="Photo"
               type="file"
               name="upload"
               style="background-color: #4C90B7"
               data-val="true"
               data-val-required="The Photo is required." />

        <span class="text-danger field-validation-error"
              data-valmsg-for="Photo"
              data-valmsg-replace="true">
            <span id="Photo-error" class="">The Photo is required.</span>
        </span>
    </div>

    <hr />

    <div class="text-center">
        <input type="submit" class="btn btn-primary" value="Add" style="background-color: #4C90B7; border-color: #4C90B7" />
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}