@model RegisterViewModel

@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <title>True Snow</title>

    <meta name="description" content="A place for the true snowboarders. Your best posts, articles, evnts and more." />
    <meta name="keywords" content="social network, social, snow, snowboard, snowboarding" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta charset="utf-8" />

    <link rel="icon" type="image/png" sizes="96x96" href="/favicon-96x96.png">

    <link href="http://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.97.5/css/materialize.min.css">

    @Styles.Render("~/Content/main")
</head>
<body>
    <div id="register-container">
        <div class="panel z-depth-4">
            @using (Html.BeginForm("Register", "Account", new { ViewBag.ReturnUrl }, FormMethod.Post, new { role = "form", style = "padding-bottom: 10px", enctype = "multipart/form-data", novalidate = "novalidate", id = "regForm" }))
            {
                @Html.AntiForgeryToken()
                @Html.ValidationSummary(true, "", new { style = "color: red" })

                <h4 class="center-align" style="color: #4C90B7; margin: 10px;">Register</h4>

                <div class="row reg">
                    <div class="input-field col s10 offset-s1">
                        @Html.TextBoxFor(m => m.FirstName, new { @class = "validate reginput", id = "fname", required = "true" })
                        <label for="fname">First Name</label>
                        @Html.ValidationMessageFor(m => m.FirstName, "", new { style = "color: red" })
                    </div>
                </div>

                <div class="row reg">
                    <div class="input-field col s10 offset-s1">
                        @Html.TextBoxFor(m => m.LastName, new { @class = "validate reginput", id = "lname", required = "true" })
                        <label for="lname">Last Name</label>
                        @Html.ValidationMessageFor(m => m.LastName, "", new { style = "color: red" })
                    </div>
                </div>

                <div class="row reg">
                    <div class="input-field col s10 offset-s1">
                        @Html.TextBoxFor(m => m.Email, new { @class = "validate reginput", id = "email", required = "true" })
                        <label for="email">Email</label>
                        @Html.ValidationMessageFor(m => m.Email, "", new { style = "color: red" })
                    </div>
                </div>

                <div class="row reg">
                    <div class="input-field col s10 offset-s1">
                        @Html.PasswordFor(m => m.Password, new { @class = "validate reginput", id = "pass", required = "true" })
                        <label for="pass">Password</label>
                        @Html.ValidationMessageFor(m => m.Password, "", new { style = "color: red" })
                    </div>
                </div>

                <div class="row reg">
                    <div class="input-field col s10 offset-s1">
                        @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "validate reginput", id = "cpass", required = "true" })
                        <label for="cpass">Confirm Password</label>
                        @Html.ValidationMessageFor(m => m.ConfirmPassword, "", new { style = "color: red" })
                    </div>
                </div>

                <input class="dropify"
                       data-height="100"
                       data-allowed-formats="square"
                       id="avatar"
                       name="upload"
                       type="file"
                       required>

                <div class="center-align" style="margin-top: 10px;">
                    <button type="submit" class="waves-effect waves-light btn btn-login">Register</button>
                </div>
            }
        </div>

        <div class="login-footer center-align">
            <div>
                © @DateTime.Now.Year - True Snow
            </div>
            <a class="grey-text text-lighten-4" href="https://github.com/BiserSirakov/TrueSnow" target="_blank">Open Source</a>
        </div>
    </div>

    <script type="text/javascript" src="https://code.jquery.com/jquery-2.1.1.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.97.5/js/materialize.min.js"></script>

    @Scripts.Render("~/bundles/main")
    @Scripts.Render("~/bundles/jqueryval")
</body>
</html>
