@using (Html.BeginForm("Search", "Search", FormMethod.Post, new { role = "form" }))
{
    @Html.AntiForgeryToken()

    <div class="form-group">
        <input class="form-control" name="query" placeholder="Search" />
    </div>
    <hr />
    <div class="text-center">
        <input type="submit" class="btn btn-primary" value="Search" style="background-color: #4C90B7; border-color: #4C90B7;" />
    </div>
}