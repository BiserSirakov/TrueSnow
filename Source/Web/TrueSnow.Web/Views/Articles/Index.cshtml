@model IEnumerable<ArticleViewModel>

<div class="col-xs-12 col-md-offset-3 col-md-6">
    <h1 class="text-center">All Articles</h1>
    @Html.ActionLink("Create new", "Create", "Articles", null, new { @class = "btn btn-primary" })
</div>

<div class="row">
    @foreach (var article in Model)
    {
        <div class="col-xs-12 col-md-offset-3 col-md-6">
            <h3>@article.Title</h3>
            <a href="@article.Url">
                <img src="~/File/@article.Photo.Id" alt="photo" class="img-responsive" />
            </a>
        </div>
    }
</div>